{
  "name": "alert-bot-subscription-service",
  "version": "1.0.0",
  "description": "Subscription Service for Alert Bot - Manages user subscriptions, plans, and billing",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t alert-bot-subscription-service .",
    "docker:run": "docker run -p 3002:3002 alert-bot-subscription-service",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "subscription",
    "billing",
    "plans",
    "microservice",
    "alert-bot",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Alert Bot Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "redis": "^4.6.12",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-async-errors": "^3.1.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "axios": "^1.6.2",
    "stripe": "^14.9.0",
    "paypal-rest-sdk": "^1.8.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "handlebars": "^4.7.8",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.8",
    "mongodb-memory-server": "^9.1.3",
    "redis-memory-server": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/alert-bot-subscription-service.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/alert-bot-subscription-service/issues"
  },
  "homepage": "https://github.com/your-org/alert-bot-subscription-service#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/logs/**",
      "!**/temp/**",
      "!app.js",
      "!healthcheck.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}