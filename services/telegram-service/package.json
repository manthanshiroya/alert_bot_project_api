{
  "name": "telegram-service",
  "version": "1.0.0",
  "description": "Telegram bot management and alert delivery service for Alert Bot Project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "docker:build": "docker build -t telegram-service .",
    "docker:run": "docker run -p 3003:3003 telegram-service",
    "healthcheck": "node healthcheck.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "alerts",
    "notifications",
    "microservice",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "redis"
  ],
  "author": "Alert Bot Project Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "node-telegram-bot-api": "^0.61.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.10.0",
    "rate-limit-redis": "^3.0.1",
    "ioredis": "^5.3.2",
    "winston": "^3.10.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "mongodb-memory-server": "^8.15.1",
    "redis-memory-server": "^0.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/alert-bot-project.git",
    "directory": "services/telegram-service"
  },
  "bugs": {
    "url": "https://github.com/your-org/alert-bot-project/issues"
  },
  "homepage": "https://github.com/your-org/alert-bot-project#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/logs/**",
      "!jest.config.js",
      "!healthcheck.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "error",
      "no-undef": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 100
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "coverage/",
      "logs/",
      "*.test.js",
      "*.spec.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "1000"
  }
}